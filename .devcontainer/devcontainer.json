{
	"name": "DCS",
	"image": "dcs-dev-container",
	"portsAttributes": {
	  "8000": {
		"label": "DCS",
		"onAutoForward": "notify"
	  }
	},
	"postCreateCommand": "pip3 install --break-system-packages -r docsbox/requirements.txt",
    "runArgs": [
        "--network=conversion-network"
    ],
	"containerEnv": {
		"MEDIA_PATH": "/workspaces/docsbox/media/",
		"REDIS_URL": "redis://host.docker.internal:6379/0",
		"VIA_CERT_PATH": "/workspaces/docsbox/certificate.pem"
	}
}
